{
    "name": "__MSG_appName__",
    "version": "0.0.1",
    "manifest_version": 2,
    "description": "__MSG_appDescription__",
    "icons": {
        "16": "images/icon-16.png",
        "128": "images/icon-128.png"
    },
    "default_locale": "en",
    "background": {
        "scripts": [
            "scripts/jquery.js",
            "scripts/bg.chromereload.js",
            "scripts/bg.socket.io.js",
            "scripts/moment.min.js",
            "scripts/bg.js"
        ]
    },
    "browser_action": {
        "default_icon": {
            "19": "images/icon-19.png",
            "38": "images/icon-38.png"
        },
        "default_title": "Pulse Social"
    },
    "options_page": "options.html",
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": [
                "scripts/jquery.js",
                "scripts/cs.jPulse.js",
                "scripts/cs.pulse.js",
                "scripts/cs.discussion.js",
                "scripts/moment.min.js",
                "scripts/cs.html2canvas.js",
                "scripts/cs.html2canvas.svg.js"
            ],
            "css": [
                "styles/style.css",
                "styles/discussion.css"
            ],
            "run_at": "document_end",
            "all_frames": false
        }
    ],
    "permissions": [
        "tabs",
        "storage",
        "history",
        "http://*/*",
        "https://*/*"
    ],
    "web_accessible_resources": [
        "images/*"
    ]
}
